                    $('#items_' + (i - 1) + '__newSKU').css("background-color", "");


                }
                if ($('#items_' + (i - 1) + '__newSKU').val() != "") {
                    $('#items_' + (i - 1) + '__SKU').prop('disabled', true);
                    $('#items_' + (i - 1) + '__SKU').css("background-color", "gray");
                }
