                        $('#items_' + (i - 1) + '__SKU').css("color", "black");
                        $('#items_' + (i - 1) + '__SKU').css("background-color", "");
                    }
                }
                if ($('#items_' + (i - 1) + '__SKU').val() == "" && $('#items_' + (i - 1) + '__newSKU').val() == "") {
                    $('#items_' + (i - 1) + '__thanhTienS').val("");

