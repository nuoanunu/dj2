                if ($('#items_' + (i - 1) + '__newSKU').val().length > 0) {
                    updatePrice22(i);
                    $('#items_' + (i - 1) + '__DonGiaS2').show();
                }
            }


        }
        setInterval(checkppricelientuc, 50);
        function checkHidden() {
            for (var i = 1 ; i < 20; i++) {

                if ($('#items_' + (i - 1) + '__SKU').val() != "") {
