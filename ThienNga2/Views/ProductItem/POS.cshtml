@using ThienNga2.Models;
@using ThienNga2.Models.Entities;
@model ThienNga2.Models.ViewModel.NewItemViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>POS</title>
    <link href="~/Content/css/select/select2.min.css" rel="stylesheet" />
    <script src="~/Content/js/select/select2.full.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script>
        $(document).ready(function () {
            $(".select2_single").select2({
                placeholder: "Chọn SKU",
                allowClear: true
            });
        });
    </script>
    <script>
        $(document).ready(function () {

            var productname =@Html.Raw(ViewData["namelist"]);

            $(".skuselector").each(function () {

                for (var i = 0; i < productname.length ; i++) {
                    $(this).append(new Option(productname[i],productname[i]));
                }
            });

        });
    </script>

</head>
<body>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Tìm theo SKU <select style="width:140px !important" id="SKUsearchbox" name="SKUSearchBox" class="skuselector select2_single form-control" tabindex="-1">
                            <option selected value=""></option>
                        </select>
                        <button class="btn btn-primary">Add</button>
                        Tìm theo tên
                        <select style="width:140px !important" id="NAMEsearchbox" name="namesearchbox" class="skuselector select2_single form-control" tabindex="-1">
                            <option selected value=""></option>
                        </select>
                        <button class="btn btn-primary">Add</button>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    <table class="table table-striped responsive-utilities jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th>
                                    <div class="icheckbox_flat-green" style="position: relative;"><input type="checkbox" id="check-all" class="flat" style="position: absolute; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins></div>
                                </th>
                                <th class="column-title">SL </th>
                                <th class="column-title">Tên SP </th>
                                <th class="column-title">Đơn giá </th>
                                <th class="column-title">Chiết khấu </th>
                                <th class="column-title">Thành tiền </th>
                                <th class="column-title"> </th>
                                <th class="column-title">
                                    <span class="nobr">Xóa</span>
                                </th>

                            </tr>
                        </thead>

                        <tbody>
                            <tr class="even pointer">
                                <td>
                                    @Html.TextBoxFor(Model => Model.items[0].quantity, new { @class = "form-control", style = "display: none;" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(Model => Model.items[0].productName, new { @class = "form-control", style = "display: none;" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(Model => Model.items[0].dongia, new { @class = "form-control", style = "display: none;" })
                                </td>
                                <td>
                                <td>
                                    <button class="btn btn-primary"> Chiết Khấu</button>
                                </td>
                                <td>
                                <td>
                                    @Html.TextBoxFor(Model => Model.items[0].thanhTien, new { @class = "form-control", style = "display: none;" })
                                </td>

                            </tr>

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
