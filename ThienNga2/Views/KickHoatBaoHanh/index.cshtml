    <script>
        function checkPrice(name, index) {
            var flag = false;

            $.getJSON("/KickHoatBaoHanh/checking?IMEI=" + name, function (result) {

                $.each(result, function (name, value) {
                    if (name == "name") {


                        if (value != null) {
                            $('#lst_' + (index - 1) + '__warrantyID').css("background-color", "red");
