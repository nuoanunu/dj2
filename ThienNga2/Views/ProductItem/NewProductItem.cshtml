                                    <label>Thành tiền @Html.TextBoxFor(Model => Model.items[i].thanhTien, new { @class = "form-control", value = "0", @type = "number" })</label>
                                </td>
                                <td>
                                    <!-- This is cheating, I use productName to temporaly store  chiết khẩu %  -->
                                    <label>Chiết khấu % @Html.TextBoxFor(Model => Model.items[i].chietKhauPhanTram, new { @class = "form-control", value = "0", @type = "number" })</label>
                                </td>
                                <td>
                                    <!-- This is cheating, I use phonenumber to temporaly store  chiết khẩu trực tiếp  -->
                                    <label>Chiết khấu trực tiếp @Html.TextBoxFor(Model => Model.items[i].chietKhauTrucTiep, new { @class = "form-control", value = "0" , @type = "number" })</label>
                                </td>
                               
                            
                               
                            </tr>


                        @*</div>*@
                    }

                </table>
                <div class="button-section">
                    <input type="submit" name="Hoàn tất" />
                   
                </div>
            </form>
        </div>
       

    }




</body>
</html>
