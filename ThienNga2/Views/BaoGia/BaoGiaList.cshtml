
@using ThienNga2.Models.Entities;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>WarrantyList</title>


    <script>
        $(document).ready(function () {
            $('#example').dataTable({
                "aaSorting": [[0, "desc"]]
            });
        });
    </script>
</head>
<body>
    <div>
        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%" data-sort-name="ID" data-sort-order="desc"> 
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ngày</th>
                    <th>Tên khách</th>
                    <th>SĐT</th>
                    <th>Tổng</th>      
                    <th>Chi tiết</th>                
                </tr>
            </thead>
            <tbody>
                @foreach (order wact in (List<order>)ViewData["allBaoGia"])
                {
                    String linkEdit = "/BaoGia/Search?code=" + wact.id;
                    <tr>
                        <td>
                            @wact.id
                        </td>
                        <td>
                           @wact.date
                        </td>
                        @if (wact.tb_customer != null && wact.tb_customer.customerName != null && wact.tb_customer.phonenumber != null)
                        {

                        <td>
                            @wact.tb_customer.customerName
                        </td>
                        <td>
                            @wact.tb_customer.phonenumber
                        </td>
                        }
                        else
                        {
                            <td>
                                Không có lưu
                            </td>
                            <td>
                                Không có lưu
                            </td>
                        }
                        <td>
                            @Convert.ToDecimal(wact.total).ToString("#,##0")
                            
                        </td>
                        <td>
                            <a href="@linkEdit">Chi tiết</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</body>
</html>
